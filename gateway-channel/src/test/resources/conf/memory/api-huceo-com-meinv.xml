<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="com.ohayoyo.gateway.memory.MemoryGatewayInterface">
        <property name="key" value="meinv"/>
        <property name="request">

            <bean class="com.ohayoyo.gateway.memory.MemoryGatewayRequest">
                <property name="protocols">
                    <set>
                        <bean class="com.ohayoyo.gateway.memory.MemoryGatewayProtocol">
                            <property name="name" value="http"/>
                        </bean>
                    </set>
                </property>

                <property name="hosts">
                    <set>
                        <bean class="com.ohayoyo.gateway.memory.MemoryGatewayHost">
                            <property name="hostname" value="api.huceo.com"/>
                        </bean>
                    </set>
                </property>

                <property name="path">
                    <bean class="com.ohayoyo.gateway.memory.MemoryGatewayPath">
                        <property name="module" value="meinv"/>
                    </bean>
                </property>

                <property name="queries">
                    <bean class="com.ohayoyo.gateway.memory.MemoryGatewayQueries">
                        <property name="fields">
                            <set>

                                <bean class="com.ohayoyo.gateway.memory.MemoryGatewayField">
                                    <property name="name" value="key"/>
                                    <property name="type" value="string"/>
                                    <property name="nullable" value="false"/>
                                    <property name="defaultValue" value="29e069ec39101eb669121554bf67024f"/>
                                </bean>

                                <bean class="com.ohayoyo.gateway.memory.MemoryGatewayField">
                                    <property name="name" value="num"/>
                                    <property name="type" value="int"/>
                                    <property name="nullable" value="false"/>
                                    <property name="defaultValue" value="10"/>
                                </bean>

                                <bean class="com.ohayoyo.gateway.memory.MemoryGatewayField">
                                    <property name="name" value="rand"/>
                                    <property name="type" value="int"/>
                                    <property name="nullable" value="true"/>
                                    <property name="defaultValue" value="1"/>
                                </bean>

                                <bean class="com.ohayoyo.gateway.memory.MemoryGatewayField">
                                    <property name="name" value="word"/>
                                    <property name="type" value="string"/>
                                    <property name="nullable" value="true"/>
                                    <property name="defaultValue" value="上海"/>
                                </bean>

                                <bean class="com.ohayoyo.gateway.memory.MemoryGatewayField">
                                    <property name="name" value="page"/>
                                    <property name="type" value="int"/>
                                    <property name="nullable" value="true"/>
                                    <property name="defaultValue" value="1"/>
                                </bean>

                            </set>
                        </property>
                    </bean>
                </property>

                <property name="methods">
                    <set>
                        <bean class="com.ohayoyo.gateway.memory.MemoryGatewayMethod">
                            <property name="name" value="get"/>
                        </bean>
                    </set>
                </property>

                <property name="entity">
                    <bean class="com.ohayoyo.gateway.memory.MemoryGatewayEntity">
                        <property name="type" value="application/x-www-form-urlencoded"/>
                    </bean>
                </property>

            </bean>
        </property>

        <property name="response">
            <bean class="com.ohayoyo.gateway.memory.MemoryGatewayResponse">
                <property name="entity">
                    <bean class="com.ohayoyo.gateway.memory.MemoryGatewayEntity">
                        <property name="type" value="application/json;charset=UTF-8"/>
                    </bean>
                </property>
            </bean>
        </property>

    </bean>

</beans>