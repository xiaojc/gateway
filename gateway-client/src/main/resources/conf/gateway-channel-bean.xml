<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="com.ohayoyo.gateway.client.spring.builder.RestfulRequestBuilderFactory"/>

    <bean class="com.ohayoyo.gateway.client.spring.builder.RestfulResponseBuilderFactory"/>

    <bean id="springClientContainer" class="com.ohayoyo.gateway.client.spring.SpringClientContainer"/>

    <bean id="springGatewayChannel" class="com.ohayoyo.gateway.client.spring.SpringClientChannel">
        <property name="gatewayContainer" ref="springClientContainer"/>
    </bean>

</beans>